extends layout

block content
  #leftSide
    #wall
      #messages
        #msgTitle
          h2 Messages received:
          br
        #msgInfo
      h3 Message: 
      input(type="text", id="inputmsg")
      button(id="send", onClick="sendMsgs()") Send
    #manymsgs
      button(id="sendMany", onClick="sendMany()") Send many messages
      p(id="inputLblOne") Msgs per Blast:
      input(type="text", id="inputOne")
      p(id="inputLblTwo") Interval(ms):
      input(type="text", id="inputTwo")
      p(id="inputLblTree") Blasts:
      input(type="text", id="inputTree")
    #infomsgs
      label(id="lblSent") Msgs sent:
      input(type="text", disabled="true", "id="msgSent", value='0')
      label(id="lblRcvt") Msgs rcvt:
      input(type="text", disabled="true", id="msgRcvt", value='0')
    #websocket
      p(id="lblWSS") Websocket Secure (WSS)
      input(type="radio", id="rdWSS", name="group", onClick="wss()")
      textarea(disabled="true", id="wss") 'wss://192.168.1.182:9090'
      p(id="lblWS") Websocket (WS)
      input(type="radio", id="rdWS", name="group", onClick="ws()")
      textarea(disabled="true", id="ws") 'ws://192.168.1.182:8080'
  #rightSide
    #logs
      #logsTitle
        h2 Logs:
        br
      #logsInfo
    #info
      h2 To run test:
      br
      p -> Enter the message you want to send.
      p -> Select the connection you want(WSS/WS) and wait for connect.
      p -> For a single message: 
      p * click "Send".
      p -> For multiple messages:
      p * Select the number of msgs per blast.
      p * Select the interval between blasts (ms).
      p * Select the number of blasts.
      p * Click "Send many messages" to run test.

